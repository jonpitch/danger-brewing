<div class="layout-column layout-align-center-center">
  {{paper-input label=(t "components.login.email") type="email" value=email onChange=(action (mut email))}}
</div>
<div class="layout-column layout-align-center-center">
  {{paper-input label=(t "components.login.password") type="password" value=password onChange=(action (mut password))}}
</div>

<div class="layout-column layout-align-center-center">
  {{#if isLoggingIn}}
    {{paper-progress-circular}}
  {{else}}
    {{#paper-button raised=true primary=true onClick=(action "login")}}
      {{t "components.login.action"}}
    {{/paper-button}}
  {{/if}}
</div>
