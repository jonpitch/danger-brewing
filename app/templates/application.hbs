{{#paper-sidenav-container class="inner-sidenav"}}

  {{! side navigation }}
  {{#paper-sidenav
    class="md-whiteframe-z2"
    name="left"
    open=leftSideBarOpen
    onToggle=(action (mut leftSideBarOpen))
  }}
    {{#paper-toolbar as |toolbar|}}
      {{#paper-toolbar-tools}}
        {{! TODO future logo? }}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}
    {{#paper-content}}
      {{#paper-list}}
        {{! main }}
        {{#paper-item}}
          <span class="link" data-test="index">
            {{link-to (t "app.navigation.onTap") 'index'}}
          </span>
        {{/paper-item}}
        {{#paper-item}}
          <span class="link" data-test="status">
            {{link-to (t "app.navigation.status") 'status'}}
          </span>
        {{/paper-item}}
        {{#paper-item}}
          <span class="link" data-test="history">
            {{link-to (t "app.navigation.history") 'history'}}
          </span>
        {{/paper-item}}
        {{paper-divider}}

        {{! misc. }}
        {{#paper-item}}
          <span class="link" data-test="about">
            {{link-to (t "app.navigation.about") 'about'}}
          </span>
        {{/paper-item}}
        {{#paper-item}}
          {{#if session.isAuthenticated}}
            <span class="link" {{action "logout"}} data-test="logout">
              {{t "app.navigation.logout"}}
            </span>
          {{else}}
            <span class="link" data-test="login">
              {{link-to (t "app.navigation.login") 'login'}}
            </span>
          {{/if}}
        {{/paper-item}}
      {{/paper-list}}
    {{/paper-content}}
  {{/paper-sidenav}}

  {{#paper-card-content class="flex"}}
    <div class="layout-fill layout-column">

      {{! toolbar }}
      {{#paper-toolbar as |toolbar|}}
        {{#toolbar.tools}}
          {{! TODO hide-gt-sm not working }}
          {{#paper-sidenav-toggle name="left" class="hide-gt-sm" as |toggleAction|}}
            {{#paper-button iconButton=true onClick=(action toggleAction)}}
              {{paper-icon "menu"}}
            {{/paper-button}}
          {{/paper-sidenav-toggle}}
          <h2>{{t "app.name"}}</h2>
          <span class="flex"></span>
        {{/toolbar.tools}}
      {{/paper-toolbar}}

      {{! content }}
      <div class="application-container">
        {{outlet}}
      </div>

    </div>
  {{/paper-card-content}}

{{/paper-sidenav-container}}
